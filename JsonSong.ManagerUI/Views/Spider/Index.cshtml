@{
    ViewBag.Title = "功能清单";
    Layout = "";
}

<script>
    require(["page/Spider/index.js"], function (pager) {
        pager.init();
    })

</script>

<div ms-controller="ctrlSpiderIndex">
    <div class="row">
        <div class="col-md-6">
            <!-- Block buttons -->
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">信息查看</h3>
                </div>
                <div class="box-body">
                    <button class="btn btn-default btn-block" ms-click="CheckClick">查看当前数据</button>
                </div>
             <div class="box-body">
                    <button class="btn btn-default btn-block" ms-click="SyncYouminClick">开始同步游民图片</button>
                </div>
            </div><!-- /.box -->
        </div>
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Button Addon</h3>
                </div>
                <div class="box-body">
                    <p>开始抓取数据 1 haha 2youmin 0 all</p>
                    <div class="input-group margin">
                        <input type="text" class="form-control" ms-duplex="TypeId">
                        <span class="input-group-btn">
                            <button class="btn btn-info btn-flat" type="button" ms-click="SpiderClick">Go!</button>
                        </span>
                    </div><!-- /input-group -->
                </div><!-- /.box-body -->
            </div>
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-12">
            <div class="box box-solid">
                <div class="box-header">
                    <i class="fa fa-text-width"></i>
                    <h3 class="box-title">Result</h3>
                </div><!-- /.box-header -->
                <div class="box-body clearfix">
                    <p>{{Result}}</p>
                </div><!-- /.box-body -->
            </div><!-- /.box -->
        </div>
    </div>

</div>
