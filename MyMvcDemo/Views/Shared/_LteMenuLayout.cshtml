@using MyMvcDemo.Extend
@using Suijing.Utils.sysTools

@{
    Layout = "_LteBaseLayout.cshtml";
    var indexModels = ControllerHelper.GetIndexModules();
}



<div class="wrapper" ms-controller="msTopContent" id="divTopContent">

    <!-- Main Header -->
    @Html.Partial("LTEPartial/_LteTopTip")

    <!-- Left side column. contains the logo and sidebar -->
    <aside class="main-sidebar">

        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">

            <!-- Sidebar user panel (optional) -->
            <div class="user-panel">
                <div class="pull-left image">
                    <img src="~/Content/imgs/photo.png" class="img-circle" alt="User Image">
                </div>
                <div class="pull-left info">
                    <p>Alexander Pierce</p>
                    <!-- Status -->
                    <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                </div>
            </div>

            <!-- search form (Optional) -->
            <form action="#" method="get" class="sidebar-form">
                <div class="input-group">
                    <input type="text" name="q" class="form-control" placeholder="Search...">
                    <span class="input-group-btn">
                        <button type="submit" name="search" id="search-btn" class="btn btn-flat"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
            <!-- /.search form -->
            <!-- Sidebar Menu -->
            <ul class="sidebar-menu">
                @foreach (var module in indexModels)
                {
                    if (!module.Children.HasValue())
                    {
                        <li class="" data-url="@module.Url" data-vname="@module.VName">
                            <a href="#">
                                <i class="fa fa-dashboard"></i> <span>@module.Name</span>
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="treeview">
                            <a href="#">
                                <i class="fa fa-laptop"></i>
                                <span>@module.Name</span>
                                <i class="fa fa-angle-left pull-right"></i>
                            </a>
                            <ul class="treeview-menu">
                                @foreach (var cModule in module.Children)
                                {
                                    <li data-url="@module.Url" data-vname="@module.VName">
                                        <a href="#!@cModule.Url" style="margin-left: 10px;"><i class="fa fa-angle-double-right"></i>@cModule.Name</a>
                                    </li>

                                }
                            </ul>
                        </li>
                    }
                }

                <li class="treeview">
                    <a href="#">
                        <i class="fa fa-envelope"></i> <span>LteDemo</span>
                        <i class="fa fa-angle-left pull-right"></i>
                    </a>
                    @Html.Partial("LTEPartial/_LteDemoIndex")
                </li>
                <li>
                    <a href="#!/home/LteDemo?path=examples/login.html">
                        <i class="fa fa-folder"></i> <span>test</span>

                    </a>

                </li>
            </ul><!-- /.sidebar-menu -->
        </section>
        <!-- /.sidebar -->
    </aside>

    @RenderBody()

