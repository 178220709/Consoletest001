<head>
    <title>@ViewBag.Title</title>

    <meta charset="UTF-8">
    @*<title>AdminLTE 2 | Dashboard</title>*@
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    
    
    <!-- Bootstrap 3.3.2 -->
    <link href="~/Content/libs/AdminLTE-2.0.3/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    @*<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />*@
    <link href="~/Content/libs/AdminLTE-2.0.3/bootstrap/font-awesome-4.3.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="http://code.ionicframework.com/ionicons/2.0.0/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    <!-- Theme style -->
    <link href="~/Content/libs/AdminLTE-2.0.3/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
          page. However, you can choose any other skin. Make sure you
          apply the skin class to the body tag so the changes take effect.
    -->
    <link href="~/Content/libs/AdminLTE-2.0.3/dist/css/skins/skin-blue.min.css" rel="stylesheet" type="text/css" />
  
    @if (ConfigHelper.GetConfigBool("IsLocal"))
    {
        <script src="~/Content/libs/seajs-2.3.0/sea-debug.js"></script>
         <!-- jQuery 2.1.3 -->
        <script src="~/Content/libs/AdminLTE-2.0.3/plugins/jQuery/jQuery-2.1.3.min.js"></script>
        <!-- Bootstrap 3.3.2 JS -->
        <script src="~/Content/libs/AdminLTE-2.0.3/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    }
    else
    {
        <script src="http://cdn.staticfile.org/seajs/2.3.0/sea.js"></script>
        <script src="http://cdn.bootcss.com/jquery/2.1.3/jquery.min.js"></script>
        <script src="http://cdn.bootcss.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    }

    
    
    <script src="~/Content/libs/underscore/underscore.js"></script>
    <script src="~/Content/libs/underscore/underscore.string.js"></script>

    <!-- AdminLTE App -->
    <script src="~/Content/libs/AdminLTE-2.0.3/dist/js/app.min.js" type="text/javascript"></script>

    <!-- Optionally, you can add Slimscroll and FastClick plugins.
        Both of these plugins are recommended to enhance the
        user experience -->
    
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->


    @{
        var hostUrl = Url.Action("Index", "Home");
    }
    <script>
        //seajs config的base配置文件
        seajs.config({
            base: "@HttpContext.Current.Request.Url.GetLeftPart(UriPartial.Authority)",
            paths: {
                "libs": "Content/libs",
                "avalon": "Content/libs/avalon",
                "lte": "Content/libs/AdminLTE",
                "page": "Scripts/Pages"
            }
        });
    </script>
    @if (ConfigHelper.GetConfigBool("IsLocal"))
    {
        <script>
            //seajs config的本地 配置
            seajs.config({
                alias: {
                    "underscore.js": "Content/libs/underscore",
                    "jquery.js": "libs/AdminLTE/js/jquery.js"
                },
            });
        </script>
    }

    else
    {
        <script>
            seajs.config({
                alias: {
                    "underscore.js": "http://cdn.staticfile.org/underscore.js/1.7.0/underscore.js",
                    "jquery.js": "http://cdn.staticfile.org/jquery/2.1.1-rc2/jquery.js",
                },
            });
        </script>
    }


    <script>
        seajs.config({
            alias: {
                "avalon.js": "libs/avalon/mmRouter.js"
            },
        });

    </script>



    @RenderSection("head", false)
</head>
<body class="skin-blue  pace-done" style="min-height: 415px;">
    @RenderBody()








    @RenderSection("foot", false)
</body>
</html>